.chat-main__message-list__data
  .chat-main__message-list__data__name
    = message.user.name
  .chat-main__message-list__data__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__message-list__say
  - if message.content.present?
    %p.message-list__say__content
      = message.content
  = image_tag message.image.url, class: 'message-list__say__image' if message.image.present?