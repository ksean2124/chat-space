.sidebar
  .sidebar__user
    .sidebar__user__block
      .sidebar__user__block__name
        = current_user.name
      .sidebar__user__block__icon
        .sidebar__user__block__icon__newgroup
          = link_to new_group_path do
            = icon('fas', 'edit')
        .sidebar__user__block__icon__set
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .sidebar__groupname
    - current_user.groups.each do |group|
      .sidebar__groupname__box
        = link_to group_messages_path(group) do
          .sidebar__groupname__box__groups
            = group.name
          .sidebar__groupname__box__message
            = group.show_last_message